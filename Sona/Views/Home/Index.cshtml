<!-- Testimonial Section Begin -->
<section class="testimonial-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Рекомендации</span>
                    <h2>Что говорят наши клиенты?</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="testimonial-slider owl-carousel">
                    @foreach (var item in Model.TestimonialData)
                    {
                        @if (item.Id < 4)
                        {
                            <div class="ts-item">
                                <p>
                                    @Html.DisplayFor(modelItem => item.TextTestimonial)
                                </p>
                                <div class="ti-author">
                                    <div class="rating">
                                        @if (item.CountStar == 1)
                                        {
                                            <i class="icon_star"></i>
                                        }
                                        else if (item.CountStar == 2)
                                        {
                                            <i class="icon_star"></i>
                                            <i class="icon_star"></i>
                                        }
                                        else if (item.CountStar == 3)
                                        {
                                            <i class="icon_star"></i>
                                            <i class="icon_star"></i>
                                            <i class="icon_star"></i>
                                        }
                                        else if (item.CountStar == 4)
                                        {
                                            <i class="icon_star"></i>
                                            <i class="icon_star"></i>
                                            <i class="icon_star"></i>
                                            <i class="icon_star"></i>
                                        }
                                        else if (item.CountStar == 5)
                                        {
                                            <i class="icon_star"></i>
                                            <i class="icon_star"></i>
                                            <i class="icon_star"></i>
                                            <i class="icon_star"></i>
                                            <i class="icon_star"></i>
                                        }
                                    </div>
                                    <h5> - @Html.DisplayFor(modelItem => item.NameUser)</h5>
                                </div>
                                <img src="~/img/testimonial-logo.png" alt="">
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Testimonial Section End -->
<!-- Blog Section Begin -->
<section class="blog-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Новости отеля</span>
                    <h2>Наши новости и события</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.NewsData)
            {
                @if (item.Id < 7)
                {
                    <div class="col-lg-4">
                        <div class="blog-item set-bg" data-setbg="../img/blog/blog-1.jpg">
                            <div class="bi-text">
                                <span class="b-tag">@item.Category.Name_Category</span>
                                <h4><a asp-controller="News" asp-action="Details" asp-route-id="@item?.Id">@item.Title1</a></h4>
                                <div class="b-time"><i class="icon_clock_alt"></i> @item.DateWrite.ToShortDateString()</div>
                            </div>
                        </div>
                    </div>
                }
                
            }
            
            <div class="col-lg-4">
                <div class="blog-item set-bg" data-setbg="../img/blog/blog-2.jpg">
