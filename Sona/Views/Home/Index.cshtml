@model Sona.ViewModels.DataViewModel

@{
    ViewData["Title"] = "Главяная страница";
}

<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Sona люкс-отель</h1>
                    <p>
                        Вот лучшие сайты бронирования отелей, включая рекомендации по 
                        международным поездкам и поиску недорогих гостиничных номеров.
                    </p>
                    <a href="#" class="primary-btn">Закажите сейчас</a>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Бронирование Вашего Отеля</h3>
                    @await Html.PartialAsync("../Orders/Create")
                </div>
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="../img/hero/hero-1.jpg"></div>
        <div class="hs-item set-bg" data-setbg="../img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="../img/hero/hero-3.jpg"></div>
    </div>
</section>
<!-- Hero Section End -->
<!-- About Us Section Begin -->
<section class="aboutus-section spad">
